<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".LoginNow">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="377dp"
        android:adjustViewBounds="true"
        android:contentDescription="Fix"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg2" />

    <ImageView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="440dp"
        android:layout_marginEnd="124dp"
        android:layout_marginRight="124dp"
        android:contentDescription="Fix"
        android:orientation="vertical"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="@+id/img_bg"
        app:layout_constraintTop_toTopOf="@+id/img_bg"
        app:layout_constraintVertical_bias="0.987"
        app:srcCompat="@drawable/loginscreen" />


    <TextView
        android:id="@+id/txt_login"
        android:layout_width="109dp"
        android:layout_height="24dp"
        android:layout_marginBottom="312dp"
        android:layout_marginEnd="276dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="276dp"
        android:layout_marginStart="26dp"
        android:contentDescription="Fix"
        android:text="LOGIN"
        android:textColor="#090101"

        android:textSize="18sp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_bg" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="314dp"
        android:layout_height="38dp"
        android:layout_marginEnd="51dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="51dp"
        android:layout_marginStart="46dp"
        android:background="@drawable/buttonsecndry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.888"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:src="@drawable/mail" />

        <TextView
            android:layout_width="222dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:text="Continue with Email"
            android:textSize="19dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="314dp"
        android:layout_height="38dp"
        android:layout_marginEnd="51dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="51dp"
        android:layout_marginStart="46dp"
        android:background="@drawable/buttonsecndry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.803"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:src="@drawable/google" />

        <TextView
            android:layout_width="222dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:text="Continue with google"
            android:textSize="19dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="314dp"
        android:layout_height="38dp"
        android:layout_marginEnd="51dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="51dp"
        android:layout_marginStart="46dp"
        android:background="@drawable/buttonsecndry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:src="@drawable/fb" />

        <TextView
            android:layout_width="222dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:text="Continue with Facebook"
            android:textSize="19dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="314dp"
        android:layout_height="38dp"
        android:layout_marginEnd="51dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="51dp"
        android:layout_marginStart="46dp"
        android:background="@drawable/buttonsecndry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:src="@drawable/mobile" />

        <TextView
            android:layout_width="222dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:onClick="continueWithMobile"
            android:text="Continue with Mobile"
            android:textSize="19dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="239dp"
        android:layout_height="43dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:text="
        By Continuing You Agree To
               Our Terms of Service  Privacy Policy "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_email" />

</androidx.constraintlayout.widget.ConstraintLayout>