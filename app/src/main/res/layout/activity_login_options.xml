<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".LoginOptions">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="377dp"
        android:adjustViewBounds="true"
        android:contentDescription="Fix"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg2" />

    <ImageView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="440dp"
        android:layout_marginEnd="124dp"
        android:layout_marginRight="124dp"
        android:contentDescription="Fix"
        android:orientation="vertical"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="@+id/img_bg"
        app:layout_constraintTop_toTopOf="@+id/img_bg"
        app:layout_constraintVertical_bias="0.987"
        app:srcCompat="@drawable/loginscreen" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="109dp"
        android:layout_height="24dp"
        android:layout_marginEnd="276dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="276dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="29dp"
        android:contentDescription="Fix"
        android:text="LOGIN"
        android:textColor="#090101"
        android:textSize="18sp"

        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/btn_mobile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_bg" />


    <Button
        android:id="@+id/btn_mobile"
        android:layout_width="284dp"
        android:layout_height="38dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="72dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="72dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/buttonsecndry"
        android:onClick="loginWithMobile"
        android:orientation="vertical"
        android:text="Enter your Mobile Number"
        app:layout_constraintBottom_toTopOf="@+id/btn_fb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_login" />

    <Button
        android:id="@+id/btn_fb"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="75dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="75dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonsecndry"
        android:orientation="vertical"
        android:text="Continue with Facebook"
        app:layout_constraintBottom_toTopOf="@+id/btn_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mobile" />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="285dp"
        android:layout_height="41dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="72dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="72dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonsecndry"
        android:orientation="vertical"
        android:text="Continue with Google"
        app:layout_constraintBottom_toTopOf="@+id/btn_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_fb" />

    <Button
        android:id="@+id/btn_email"
        android:layout_width="283dp"
        android:layout_height="43dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="72dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="72dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonsecndry"
        android:orientation="vertical"
        android:text="Continue with Email"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_google" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="239dp"
        android:layout_height="43dp"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:text="
        By Continuing You Agree To
               Our Terms of Service  Privacy Policy "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_email" />

</androidx.constraintlayout.widget.ConstraintLayout>